/**
 * This simulates the gas usage of a car.
 * Ryan O'Hara
 * September 24, 2008
 */

public class Car
{
     
     private double MPG, Gas;
          
     public Car (double MilesPerGallon)
     {
          MPG = MilesPerGallon;
     }// end constructer
     

     public void tank (double initFuel)
     {
          Gas = initFuel;
     }

    
     public void addGas (double gallons)
     {
          Gas += gallons;
     }//end addGas method 
     
     
     public void drive (double miles)
     {
          Gas -=  miles/MPG;
     }//end drive method 
     
     
     public double checkGas ()
     {
     return Gas;
     }//end checkGas method 
     
}//end Car class